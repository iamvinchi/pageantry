<%- include('../partials/admin-header') %>
<h1 class="mb-4">Update Contestant Information</h1>

<form action="/admin/contestants/<%= contestant._id %>" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullName" name="fullName" value="<%= contestant.fullName %>">
    </div>
    
    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="tel" class="form-control" id="phone" name="phone" value="<%= contestant.phone %>">
    </div>
    
    <div class="mb-3">
        <label for="age" class="form-label">Age</label>
        <input type="number" class="form-control" id="age" name="age" value="<%= contestant.age %>">
    </div>

    <div class="mb-3">
        <label for="post" class="form-label">Category</label>
        <select class="form-select" id="post" name="post" required>
            <option value="Miss CYON" <%= contestant.post === 'Miss CYON' ? 'selected' : '' %>>Miss CYON</option>
            <option value="Master CYON" <%= contestant.post === 'Master CYON' ? 'selected' : '' %>>Master CYON</option>
        </select>
    </div>
    
    <div class="mb-3">
        <label for="bio" class="form-label">Biography</label>
        <textarea class="form-control" id="bio" name="bio" rows="3"><%= contestant.bio %></textarea>
    </div>
   
    <div class="mb-3">
        <label for="photo" class="form-label">Photo</label>
        <input type="file" class="form-control" id="photo" name="photo" accept="image/*">
        <% if (contestant.photo) { %>
            <div class="mt-2">
                <small>Current photo:</small> </br>
                <img src="<%= contestant.photo %>" class="card-img-top" alt="<%= contestant.fullName %>" style="width: 70px; height: 70px;">
            </div>
        <% } %>
    </div>

    <button type="submit" class="btn btn-primary" id="submitButton">Submit</button>
</form>
<%- include('../partials/admin-footer') %>